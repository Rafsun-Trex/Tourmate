<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/servicebg"
    tools:context=".welcome">

    <EditText
        android:id="@+id/locationEditTxt"
        android:layout_width="277dp"
        android:layout_height="55dp"
        android:layout_marginTop="84dp"
        android:drawableLeft="@drawable/ic_baseline_not_listed_location_24"
        android:drawablePadding="10dp"
        android:drawableTint="@color/white"
        android:hint="Enter your location"
        android:textColorHint="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/budgetEditTxt"
        android:layout_width="277dp"
        android:layout_height="55dp"
        android:layout_marginTop="92dp"
        android:drawableLeft="@drawable/ic_baseline_monetization_on_24"
        android:drawablePadding="10dp"
        android:drawableTint="@color/white"
        android:hint="Your estimated budget"
        android:textColorHint="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationEditTxt" />

    <EditText
        android:id="@+id/preferenceEditTxt"
        android:layout_width="277dp"
        android:layout_height="55dp"
        android:layout_marginTop="92dp"
        android:drawableLeft="@drawable/ic_baseline_menu_book_24"
        android:drawablePadding="10dp"
        android:drawableTint="@color/white"
        android:hint="Preferences"
        android:textColorHint="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/budgetEditTxt" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/findTourBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="find my tour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/preferenceEditTxt"
        app:layout_constraintVertical_bias="0.498"
        android:backgroundTint="@color/teal_700"/>
</androidx.constraintlayout.widget.ConstraintLayout>